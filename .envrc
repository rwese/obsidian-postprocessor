#!/usr/bin/env bash
# Automatically activate virtual environment when entering project directory

# Check if virtual environment exists
if [[ -d "venv" ]]; then
    echo "ğŸ Activating virtual environment: venv"
    source venv/bin/activate
elif [[ -d ".venv" ]]; then
    echo "ğŸ Activating virtual environment: .venv"
    source .venv/bin/activate
else
    echo "âš ï¸  No virtual environment found. Create one with:"
    echo "   python3 -m venv venv"
    echo "   source venv/bin/activate"
    echo "   pip install -r requirements.txt"
fi

# Set project-specific environment variables
export PYTHONPATH="$PWD:$PYTHONPATH"
export PROJECT_ROOT="$PWD"

# Load environment variables from .env file if it exists
if [[ -f ".env" ]]; then
    echo "ğŸ“„ Loading environment variables from .env"
    source .env
fi

echo "ğŸ“ Project directory: $PWD"
echo "ğŸ”§ Python path: $(which python)"
echo "ğŸ“¦ Pip path: $(which pip)"
